<%= form_with(model: @animal, local: true) do |f| %>

  <%= f.hidden_field :animal_type_id, value: @animal_type.id %>

  <div class="form-group">
    <%= f.label :photo %>

    <%= f.file_field :photo, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :name %>

    <%= f.text_field :name, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :description %>

    <%= f.text_field :description, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :age %>

    <%= f.text_field :age, class: "form-control" %>
  </div>

  <%= f.submit "Create animal", class: "btn btn-block btn-outline-secondary" %>
<% end %>
